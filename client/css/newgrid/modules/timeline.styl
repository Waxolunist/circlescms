.timeline-embed
  padding-left 0
  padding-right 0

#timeline-embed 
  // Citations
  .cite
    font-style italic
  footer
    border-top 1px lighten(gray,30) solid 
    padding-bottom 0.2em
  // Show iFrame at max size
  .iframe 
    .content
      padding-left 0
      padding-right 0
      display inline-table
      width 100%
    .content-container
      width 100%
    .content-container
    .content
    .media 
    .text-media
    .text-media div
      height 100%
    .media 
      .text-media
        padding-right 0
      .plain-text
        width 100%
      .media-container
        max-width none !important
      .media-wrapper
      .media-container
        display block
      .container
        display block
      iframe
        border 0
        width 100%
        height 98%
        padding-top 1%
    .pad-top
      display table
      .text
      .media
        display table-row
        iframe
          padding-top 0
  // Small Info class
  .small-info
    font-size smaller
    padding-top 3em
  .pad-top .small-info
    padding-top 0
  // Corrections - timeline uses the class content as well
  .content
    opacity 1
    max-height none

