/* ===============================================================
Pagination Styles
================================================================*/
.swiper-pagination
  position absolute
  z-index 20
  left 10px
  bottom 10px

.swiper-pagination-switch
  display inline-block
  width 8px
  height 8px
  border-radius 8px
  background #222
  margin-right 10px
  opacity 0.8
  border 1px solid #fff
  cursor pointer

.swiper-active-switch
  background #aaa

.swiper-visible-switch
  background #cdcdcd
