#timeline-embed .cite
  font-style italic

#timeline-embed footer
  border-top 1px #AFAFAF solid 
  padding-bottom 0.2em

#timeline-embed 
  .iframe 
    .content
      display inline-table
      width 100%
    .content-container
      width 100%
    .content-container
    .content
    .media 
    .text-media
    .text-media div
      height 100%
    .media 
      .text-media
        padding-right 0
      .plain-text
        width 100%
      .media-container
        max-width none !important
      .media-wrapper
      .media-container
        display block
      .container
        display block
      iframe
        border 0
        width 100%
        height 98%
        padding-top 1%
    .pad-top
      display table
      .text
      .media
        display table-row
        iframe
          padding-top 0
