#!/bin/bash

DRY="$1"

. setenv $DRY

CWD=`pwd`
cd $OPENSHIFT_REPO_DIR

if ! bower_loc="$(type -p "bower")" || [ -z "bower_loc" ]; then 
  if [ "$DRY" != "dry" ]; then
    echo "Bower install:"
    npm install -g bower
  else
    echo "Dry run - Bower install"
  fi
fi

if [ "$DRY" != "dry" ]; then
  echo "Bower update"
  bower update
else
  echo "Dry run - Bower update"
fi

cd $CWD

