.taglist
  font-size 80%
  float left
  margin-top 0.5em
  margin-bottom 0.5em
  line-height 1.5em
  > .tag
    float left
    text-transform lowercase
    background-color lightblue
    margin-bottom 0.5em
    margin-right 0.5em
    padding 0.3em 0.5em
    color blue

.tagcloud
  @extends .taglist
  padding-left 1em
  & .tagcloud_item
    @extends .taglist > .tag
  & a
    text-decoration none
    
